<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    >
    <android.support.design.widget.FloatingActionButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:backgroundTint="#a2b4b4b4"
        android:src="@drawable/ic_add_black_24dp"
        />

    <RelativeLayout

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

        <ImageView
            android:id="@+id/app_bar_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textView"
            android:layout_below="@id/app_bar_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Capture The Flag"
            android:textSize="40sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#e7e3e3"
            android:background="#020610"
            />


        <ScrollView
            android:layout_below="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bc">

            <LinearLayout
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:id="@+id/cart1"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#5a000000"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/date"/>

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/image1"
                            android:paddingTop="7dp"
                            android:textSize="25sp"
                            android:text="Date : 04.10.18"
                            android:textColor="#bfbfbf"/>

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/image1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/time" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/image2"
                            android:layout_below="@id/text1"
                            android:paddingTop="6dp"
                            android:textSize="25sp"
                            android:text="Time : 5:00 pm"
                            android:textColor="#bfbfbf"/>
                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/image2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/venue"/>
                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/image3"
                            android:layout_below="@id/text2"
                            android:paddingTop="6dp"
                            android:textSize="25sp"
                            android:text="Venue : Network Lab - AC II"
                            android:textColor="#bfbfbf"/>
                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/image3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/team"/>
                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/image4"
                            android:layout_below="@id/text3"
                            android:paddingTop="6dp"
                            android:textSize="25sp"
                            android:text="Team Members : 2"
                            android:textColor="#bfbfbf"/>
                        <ImageView
                            android:id="@+id/image5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/image4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/contact"/>
                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/image5"
                            android:layout_below="@id/text4"
                            android:paddingTop="6dp"
                            android:textSize="25sp"
                            android:text="Contact : 9862273625"
                            android:textColor="#bfbfbf"/>




                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#5a000000">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textdes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Description"
                            android:textSize="30sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textdes"
                            android:text="There are two main types of Capture the Flags (CTFs) challenges:  (a)Jeopardy-style CTFs consisting of completing different challenges from a broad range of categories in order to earn points.  (b)Attack-defence CTFs consisting of two teams, one team who defends a network or server, and another who attack it."
                            android:textColor="#bfbfbf"
                            android:gravity="fill_horizontal"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"

                            />

                    </RelativeLayout>



                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>






